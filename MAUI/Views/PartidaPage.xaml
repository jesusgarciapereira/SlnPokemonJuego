<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI.VM"
             x:Class="MAUI.Views.PartidaPage"
             Title="Partida">

    <VerticalStackLayout Padding="20" BackgroundColor="#F5F5DC">

        <Label Text="{Binding NumRonda, StringFormat='Ronda: {0}'}"
               FontSize="24"
               FontFamily="PokemonFuente"
               HorizontalOptions="Center"
               TextColor="#F57F17"/>

        <Grid Margin="0,20,0,10"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center">

            <!-- Tiempo -->
            <Label Grid.Column="0"
                   Text="{Binding PreguntaActual.Tiempo, StringFormat='Tiempo: {0}s'}"
                   FontSize="18"
                   FontFamily="GameBoyFuente"
                   TextColor="#D32F2F"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <!-- Imagen -->
            <Image Grid.Column="1"
                   Source="{Binding PreguntaActual.PokemonPreguntado.Imagen}"
                   HeightRequest="300"
                   WidthRequest="300"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- Puntos Totales -->
            <Label Grid.Column="2"
                   Text="{Binding PuntosTotales, StringFormat='Puntos: {0}'}"
                   FontSize="18"
                   FontFamily="GameBoyFuente"
                   TextColor="#388E3C"
                   VerticalOptions="Center"
                   HorizontalOptions="End" />
        </Grid>

        <!-- Opciones -->
        <CollectionView ItemsSource="{Binding PreguntaActual.Opciones}" 
                        SelectionMode="Single"
                        SelectedItem="{Binding PreguntaActual.PokemonSeleccionado, Mode=TwoWay}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           Padding="10"
                           Margin="5"
                           BackgroundColor="#FFF9C4"
                           BorderColor="#FBC02D">
                        <Label Text="{Binding Nombre}"
                               FontSize="18"
                               FontFamily="GameBoyFuente"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="#5D4037" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>