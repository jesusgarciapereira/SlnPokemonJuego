<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:MAUI.VM.Utils.Converters"
             xmlns:vm="clr-namespace:MAUI.VM"
             x:Class="MAUI.Views.PartidaPage"
             Title="Partida">

    <ContentPage.Resources>
        <converter:ConverterColorBackgroundRespuesta x:Key="colorBackgroundRespuesta"/>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" BackgroundColor="#F5F5DC">

        <Grid Margin="0,20,0,10"
              RowDefinitions="Auto,Auto,*"
              ColumnDefinitions="*,*,*"
              VerticalOptions="Center"
              HorizontalOptions="FillAndExpand"
              IsVisible="{Binding PartidaVisible}">

            <!-- Label Ronda -->
            <Label Grid.Row="0" Grid.ColumnSpan="3"
                   Text="{Binding NumRonda, StringFormat='Ronda {0}'}"
                   FontSize="48"
                   FontFamily="PokemonFuente"
                   HorizontalOptions="Center"
                   TextColor="#FF6F00" />

            <!-- Tiempo (Izquierda) -->
            <VerticalStackLayout Grid.Row="1" Grid.Column="0"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="Tiempo"
                       FontSize="24"
                       FontFamily="GameBoyFuente"
                       TextColor="#D32F2F"
                       HorizontalOptions="Center" />
                <Label Text="{Binding PreguntaActual.Tiempo}"
                       FontSize="48"
                       FontFamily="GameBoyFuente"
                       TextColor="#D32F2F"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Imagen (Centro) -->
            <Image Grid.Row="1" Grid.Column="1"
                   Source="{Binding PreguntaActual.PokemonPreguntado.Imagen}"
                   HeightRequest="300"
                   WidthRequest="300"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- Puntos Totales (Derecha) -->
            <VerticalStackLayout Grid.Row="1" Grid.Column="2"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="Puntos"
                       FontSize="24"
                       FontFamily="GameBoyFuente"
                       TextColor="#388E3C"
                       HorizontalOptions="Center" />
                <Label Text="{Binding PuntosTotales}"
                       FontSize="48"
                       FontFamily="GameBoyFuente"
                       TextColor="#388E3C"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Opciones (Fila 2, columnas 0 a 2) -->
            <CollectionView Grid.Row="2" Grid.ColumnSpan="3"
                            ItemsSource="{Binding PreguntaActual.Opciones}" 
                            SelectionMode="Single"
                            SelectedItem="{Binding PreguntaActual.PokemonSeleccionado, Mode=TwoWay}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="2"
                                     VerticalItemSpacing="10"
                                     HorizontalItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12"
                               Padding="10"
                               Margin="5"               
                               BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, 
                         Path=BindingContext.PreguntaActual, 
                         Converter={StaticResource colorBackgroundRespuesta}}"
                               BorderColor="#FBC02D">
                            <Label Text="{Binding Nombre}"
                                   FontSize="24"
                                   FontFamily="GameBoyFuente"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#5D4037" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

        <Grid Margin="0,20,0,10"
      RowDefinitions="*,*,*,*" 
            ColumnDefinitions="*"
      VerticalOptions="Center"
      HorizontalOptions="FillAndExpand"
      IsVisible="{Binding FormularioVisible}"
      RowSpacing="15">
            <!-- Reducido el espaciado para mejor proporción -->

            <!-- Título principal -->
            <Label Grid.Row="0"
           Text="Fin de la partida"
           FontSize="36"
           FontFamily="PokemonFuente"
           TextColor="#FF6F00"
           HorizontalOptions="Center"
           VerticalOptions="End"/>
            <!-- Alineado abajo en su celda -->

            <!-- Puntos - ahora en Grid.Row="1" -->
            <Label Grid.Row="1"
           Text="{Binding PuntosTotales, StringFormat='Has conseguido {0} Punto(s)'}"
           FontSize="24"
           FontFamily="GameBoyFuente"
           TextColor="#388E3C"
           HorizontalOptions="Center"
           VerticalOptions="Start"/>
            <!-- Alineado arriba en su celda -->

            <!-- Entry para el nick -->
            <Entry Grid.Row="2"
           Placeholder="Escribe tu Nick"
           Text="{Binding NickJugador}"
           FontSize="20"
           FontFamily="GameBoyFuente"
           TextColor="#5D4037"
           HorizontalOptions="Fill"
           VerticalOptions="Center"
           Margin="40,0"
           HeightRequest="40"/>

            <!-- Botón de guardar -->
            <Button Grid.Row="3"
            Text="Guardar"
            Command="{Binding BotonGuardar}"
            FontSize="20"
            FontFamily="GameBoyFuente"
            BackgroundColor="#388E3C"
            TextColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Start" 
                WidthRequest="200"
            HeightRequest="50"
            CornerRadius="10"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
