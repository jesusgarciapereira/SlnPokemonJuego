<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI.VM"
             x:Class="MAUI.Views.PartidaPage"
             Title="PartidaPage">

    <VerticalStackLayout Padding="20">

        <!-- Tiempo, Imagen y PuntosTotales alineados horizontalmente -->
        <Grid Margin="0,20,0,10"
              ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center">

            <!-- Tiempo -->
            <Label Grid.Column="0"
                   Text="{Binding PreguntaActual.Tiempo, StringFormat='Tiempo: {0}s'}"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <!-- Imagen del PokÃ©mon preguntado -->
            <Image Grid.Column="1"
                   Source="{Binding PreguntaActual.PokemonPreguntado.Imagen}"
                   HeightRequest="400"
                   WidthRequest="400"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <!-- Puntos Totales -->
            <Label Grid.Column="2"
                   Text="{Binding PuntosTotales, StringFormat='Puntos: {0}'}"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="End" />

        </Grid>

        <!-- Opciones como tabla 2x2 -->
        <CollectionView ItemsSource="{Binding PreguntaActual.Opciones}" 
                        SelectionMode="Single"
                        SelectedItem="{Binding PreguntaActual.PokemonSeleccionado, Mode=TwoWay}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           Padding="10"
                           Margin="5"
                           BackgroundColor="LightYellow">
                        <Label Text="{Binding Nombre}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>