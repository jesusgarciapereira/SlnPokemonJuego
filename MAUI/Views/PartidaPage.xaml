<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI.VM"
             x:Class="MAUI.Views.PartidaPage"
             Title="PartidaPage">

    <VerticalStackLayout Padding="20">

        <!-- Imagen del PokÃ©mon preguntado -->
        <Image Source="{Binding PreguntaActual.PokemonPreguntado.Imagen}"
           HeightRequest="150"
           WidthRequest="150"
           HorizontalOptions="Center"
           Margin="0,20,0,10" />

        <!-- Opciones como tabla 2x2 -->
        <CollectionView ItemsSource="{Binding PreguntaActual.Opciones}" 
                        SelectionMode="Single"
                        SelectedItem="{Binding PokemonSeleccionado, Mode=TwoWay}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray"
                           CornerRadius="12"
                           Padding="10"
                           Margin="5"
                           BackgroundColor="LightYellow">
                        <Label Text="{Binding Nombre}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>