<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MAUI.VM"
             x:Class="MAUI.Views.SeleccionarPartidaPage"
             Title="Seleccionar Generación">

    <ContentPage.BindingContext>
        <vm:clsSeleccionarPartidaVM />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <VerticalStackLayout Padding="30" Spacing="20" BackgroundColor="#F5F5DC">

            <Label Text="Selecciona una Generación"
                   FontSize="48"
                   FontFamily="PokemonFuente"
                   HorizontalOptions="Center"
                   TextColor="#FF6F00"/>

            <Button Text="1º Kanto"
                    Command="{Binding BotonGeneracion}"
                    CommandParameter="1"
                    FontFamily="GameBoyFuente"
                    BackgroundColor="#FFCDD2"
                    TextColor="#B71C1C"
                    CornerRadius="12"/>

            <Button Text="2º Johto"
                    Command="{Binding BotonGeneracion}"
                    CommandParameter="2"
                    FontFamily="GameBoyFuente"
                    BackgroundColor="#C5CAE9"
                    TextColor="#1A237E"
                    CornerRadius="12"/>

            <Button Text="3º Hoenn"
                    Command="{Binding BotonGeneracion}"
                    CommandParameter="3"
                    FontFamily="GameBoyFuente"
                    BackgroundColor="#B2EBF2"
                    TextColor="#006064"
                    CornerRadius="12"/>

            <Button Text="TODAS"
                    Command="{Binding BotonGeneracion}"
                    CommandParameter="0"
                    FontFamily="GameBoyFuente"
                    BackgroundColor="#FFF176"
                    TextColor="#F57F17"
                    CornerRadius="12"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>